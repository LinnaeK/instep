<%-include('../partials/header') %>
<%if(studio){%>
        <div class = "container">
            <div>
                <ul class = "list-unstyled">
                        <li>
                            <p class = "show-heading"><%=studio.name%></p>
                        </li>
                        <li>
                            <%=studio.streetAdd%>
                        </li>
                        <li>
                            <%=studio.city%> <%=studio.state%>  <%=studio.zip%>
                        </li>
                        <li>
                            <%=studio.phoneNum%>
                        </li>
                        <li>
                            <%=studio.email%>
                        </li>
                    </ul>
                    <%if(user.isAdmin){%>
                        <a href="/studios/<%=studio._id%>/edit"><button class="btn-dark">Edit Studio</button></a>
                    <%}%>
                </div>
                <%}%>
                <div>
                    <h3 class = "show-heading">Rooms</h3>
                    
                    <%if(rooms.length){%>
                        <%console.log(rooms.length)%>
                        <%rooms.forEach(function(room){%>
                            <div class = "ltl-list">
                                <form action="/rooms/<%=room._id%>?_method=DELETE" method = "POST" class = "delete-form align">
                                    <button type = "submit" class = "btn btn-outline-danger btn-sm inline">x</button>
                                </form>
                                <span class = "inline"><%=room.name%></span>
                            </div>
                            <%})%>
                            <%}%>
                        </div>
                        <div>
                                <h3 class = "show-heading">Teachers</h3>
                                <ul class = "list-unstyled">
                                    <%teachers.forEach(function(teacher){%>
                                    <li> 
                                        <%=teacher.firstName%> 
                                        <%=teacher.lastName%> 
                                    </li>
                                    <%})%>
                                </ul>
                            </div>
                        <div>
                            
                            <h3 class="show-heading">Add Room</h3>
                            <form id="new-form" class = "add-room" action="/rooms/<%=studio._id%>" method = "POST">
                                <div class="form-group">
                                    <label>Room Name:</label>
                                    <input type="text" class="form-control" name="name">
                                </div>
                                <div>
                                    
                                    <button class="btn btn-dark" type="submit">Add Room</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    
<%- include('../partials/footer') %>
