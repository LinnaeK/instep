<%-include('../partials/header')%>
<h2>Edit Teacher Profile</h2>
<form id="new-form" action="/teachers/<%=user._id%>?_method=PUT" method = "POST" autocomplet="off">
<div class="form-group">
    <label>First Name:</label>
    <input type="text" class="form-control" name="firstName" value="<%=user.firstName%>">
</div>
<div class="form-group">
    <label>Last Name:</label>
    <input type="text" class="form-control" name="lastName" value="<%=user.lastName%>">
</div>
<div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="admin" value=<%user.isAdmin%>>
          Administrator
        </label>
</div>
<div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="teacher" value=<%user.isTeacher%>>
          Teacher
        </label>
</div>
<div class="form-group">
    <label>Phone Number:</label>
    <input type="text" class="form-control" name="phoneNum" value="<%=user.phoneNum%>">
</div>
<div class="form-group">
    <label>E-mail:</label>
    <input type="text" class="form-control" name="email" value="<%=user.email%>">
</div>
<%console.log(user.streetAdd)%>
<div class="form-group">
    <label>Street Address:</label>
    <input type="text" class="form-control" name="streetAdd" value="<%=user.streetAdd%>">
</div>
<div class="form-group">
    <label>City:</label>
    <input type="text" class="form-control" name="city" value="<%=user.city%>">
</div>
<div class="form-group">
    <label>State:</label>
    <input type="text" class="form-control" name="state" value="<%=user.state%>">
</div>
<div class="form-group">
    <label>Zip:</label>
    <input type="number" class="form-control" name="zip" value="<%=user.zip%>">
</div>
<div class="form-group">
    <label>Instruments:</label>
    <input type="text" class="form-control" name="instruments" value="<%=user.instruments%>">
</div>
<button class="btn btn-dark" type="submit">Submit form</button>
</form>
<%- include('../partials/footer') %>
