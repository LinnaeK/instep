<%-include('../partials/header') %>
<h2>Teacher Information</h2>
<h4 class = "teacher"><%=teacher.firstName%> <%=teacher.lastName%></h4>
<%if(teacher){%>
    <div class="container">
    <div>
        <h4 class="show-heading">Contact</h4>
    <ul class = "list-unstyled">
        <li>

            <%=teacher.streetAdd%>
        </li>
        <li>

            <%=teacher.city%> <%=teacher.state%>  <%=teacher.zip%>
        </li>
        <li>

            <%=teacher.phoneNum%>
        </li>
        <li>

            <%=teacher.email%>
        </li>
        <li>

            <%=teacher.instruments%>
        </li>
        </ul>
        <a href="/teachers/<%=teacher._id%>/edit"><button class="btn-dark">Edit Profile</button></a>
    </div>
        <div>
            <h4 class="show-heading">Students</h4>
            <ul class="list-unstyled">
        <%students.forEach(function(s){%>
            <li>
                <%=s.firstName + ' ' + s.lastName%>
            </li>
        <%})%>
    </ul>
    </div>
</div>
<%}%>
<%- include('../partials/footer') %>
